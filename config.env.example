# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook URLs
WEBHOOK_DRIVE=https://your-webhook-url.com/drive-img
WEBHOOK_SAMOKATY=https://your-webhook-url.com/samokat-img
WEBHOOK_DRIVE_TEXT=https://your-webhook-url.com/drive-text
WEBHOOK_SAMOKATY_TEXT=https://your-webhook-url.com/samokat-text

# Default service (drive or samokaty)
DEFAULT_SERVICE=drive

# Admin user IDs (comma-separated)
ADMIN_USER_IDS=

# HTTP settings
HTTP_TIMEOUT_SECONDS=25
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO

# Batching settings
MAX_CREATIVES_PER_BATCH=10
BURST_DEBOUNCE_SECS=2.0
BURST_HARDCAP_SECS=3.5

# Webhook mode (rich or urls_only)
WEBHOOK_MODE=rich
